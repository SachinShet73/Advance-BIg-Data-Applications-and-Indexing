{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "data-schema.json",
  "title": "Structured Data Schema",
  "description": "JSON Schema for validating structured data in the REST API",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the data record",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "minLength": 1,
      "maxLength": 100
    },
    "name": {
      "type": "string",
      "description": "Name of the data record",
      "minLength": 1,
      "maxLength": 255
    },
    "type": {
      "type": "string",
      "enum": ["user", "product", "order", "category"],
      "description": "Type of the data record"
    },
    "attributes": {
      "type": "object",
      "description": "Dynamic attributes for the data record",
      "additionalProperties": true
    },
    "metadata": {
      "type": "object",
      "properties": {
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "version": {
          "type": "integer",
          "minimum": 1
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["id", "name", "type"],
  "additionalProperties": false
}